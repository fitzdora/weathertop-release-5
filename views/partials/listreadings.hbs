<table class="ui table">
  <thead>
  <th>Weather Code</th>
  <th>Temperature</th>
  <th>Wind Speed</th>
  <th>Pressure</th>
  <th>Wind Direction</th>
  </thead>
  <tbody>
  {{#each stations.readings}}
    <tr>
      <td>{{code}}</td>
      <td>{{temp}}</td>
      <td>{{windSpeed}}</td>
      <td>{{pressure}}</td>
      <td>{{windDirection}}</td>
      <td><a href="/readings/{{../stations.id}}/editreadings/{{id}}" class="ui icon button">
        <i class="pencil alternate icon"></i>
      </a></td>
      <td><a href="/stations/{{../stations.id}}/deletereadings/{{id}}" class="ui icon button">
        <i class="icon trash"></i>
      </a></td>
    </tr>
  {{/each}}
  </tbody>
</table>